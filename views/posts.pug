extends layout.pug
block content
	body
		.container.mt-5.text-left
			h1 Posts route
			ul.list-group
				each post in posts
					li.list-group-item
						span.mr-3="name:" + post.name
						span.mr-3="content:" + post.content
						span.mr-3="order:" + post.order
						a(href="/posts/" + post._id) show
		form.form-signin(method='POST', action='http://localhost:4000/posts')
			h1.h3.mb-3.font-weight-normal Create a new Post
			
			.mb-3
				label-sr-only(for='inputName') Name
				input#inputName.form-control(name='name', type='text', placeholder='Name', required='', autofocus='')

			.mb-3
				label-sr-only(for='inputContent') Content
				input#inputContent.form-control(name='content', type='password', placeholder='Content', required='', autofocus='')

			.mb-3
				label-sr-only(for='inputContent') Order
				input#inputOrder.form-control(name='order', type='number', placeholder='Order', required='', autofocus='')

			button.btn.btn-lg.btn-success.btn-block(type='submit') Sign in
			p.mt-5.mb-3.text-muted 

